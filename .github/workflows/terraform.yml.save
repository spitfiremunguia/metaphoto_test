name: Terraform CI/CD

# Trigger this workflow on push or pull request to the 'main' branch
on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  terraform:
    name: Deploy Terraform
    runs-on: ubuntu-latest  # Use Ubuntu runner (1 minute per real minute)

    steps:
      # Step 1: Checkout the code from the repository
      - name: Checkout code
        uses: actions/checkout@v2

      # Step 2: Set up Terraform in the runner
      - name: Setup Terraform
        uses: hashicorp/setup-terraform@v1
        with:
          terraform_version: 1.0.9  # Set your preferred Terraform version

      # Step 3: Initialize Terraform
      - name: Initialize Terraform
        run: terraform init

      # Step 4: Validate Terraform configuration
      - name: Validate Terraform
        run: terraform validate

      # Step 5: Plan Terraform changes
      - name: Terraform Plan
        run: terraform plan

      # Step 6: Apply Terraform changes (if no errors in previous steps)
      - name: Apply Terraform
        env:
          DIGITALOCEAN_TOKEN: ${{ secrets.DIGITALOCEAN_TOKEN }}  # Use DigitalOcean token secret
        run: terraform apply -auto-approve
